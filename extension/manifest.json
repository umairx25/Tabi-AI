{
  "manifest_version": 3,
  "name": "Tabi",
  "version": "0.1",
  "description": "An intelligence layer for your browser.",
  "permissions": [
    "tabs",
    "tabGroups",
    "windows",
    "scripting",
    "bookmarks",
    "storage"
  ],

  "host_permissions": ["<all_urls>"],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "background": { "service_worker": "background.js" },
  "action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    },
    "default_title": "Tabi"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [{
    "resources": [
      "popup.html",
      "popup.js",
      "config.js",
      "style.css"
    ],
    "matches": ["<all_urls>"]
  }],
  "commands": {
    "open-command-bar": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+K"
      },
      "description": "Open Tabi Command Bar"
    }
  }

  
}